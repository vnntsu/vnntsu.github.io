---
import { Image } from 'astro:assets'

import SocialIcons from './SocialIcons.astro'

const { fullName, title, company, profilePicture, information, titleReference, companyReference } =
  Astro.props
---

<div class="flex-1">
  <h1 class="text-4xl font-bold mb-4">
    Welcome! I'm <span class="text-secondary">{fullName}</span>
  </h1>
  <p class="text-xl text-gray-600 mb-4">
    {
      titleReference ? (
        <a
          href={titleReference}
          target="_blank"
          class="text-primary hover:text-primary-focus underline"
        >
          {title}
        </a>
      ) : (
        { title }
      )
    }
    {' @ '}
    {
      company && (
        <>
          {companyReference ? (
            <a
              href={companyReference}
              target="_blank"
              class="text-primary hover:text-primary-focus underline"
            >
              {company}
            </a>
          ) : (
            company
          )}
        </>
      )
    }
  </p>
  <p class="text-lg mb-6">
    {information}
  </p>
  <div class="flex gap-4">
    <SocialIcons />
  </div>
</div>
<div class="size-72 lg:block hidden">
  <!-- Add your profile image -->
  <Image src={profilePicture} alt={fullName} class="w-full h-full mask mask-circle size-44" />
</div>
